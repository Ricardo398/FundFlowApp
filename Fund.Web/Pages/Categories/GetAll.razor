@page "/categorias"
@inherits GetAllCategoriesPage
@using Fund.Core.Models

<MudText Typo="Typo.h3">Categorias</MudText>
<div class="d-flex justify-end">
    <MudButton Variant="Variant.Filled"
               Color="Color.Primary"
               StartIcon="@Icons.Material.TwoTone.Add"
               Href="/categorias/adicionar">
        Nova Categoria
    </MudButton>
</div>

<MudDataGrid T="Category"
             Class="mt-4"
             Items="@Categories"
             Filterable="true">
    <Columns>
        <PropertyColumn Property="x => x.Id" Title="ID" />
        <PropertyColumn Property="x => x.Title" Title="Categoria" />
        <TemplateColumn Title="Ações" Align="Align.Right" Sortable="false" Filterable="false">
            <CellTemplate>
                <MudIconButton Icon="@Icons.Material.Filled.Delete"
                               Color="Color.Error"
                               OnClick="()=> OnDeleteButtonClickedAsync(context.Item.Id, context.Item.Title)">
                </MudIconButton>
            </CellTemplate>
        </TemplateColumn>
    </Columns>
</MudDataGrid>